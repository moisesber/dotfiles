[core]
  excludesfile = /Users/yuriteixeira/.gitignore_global
  autocrlf = input
[push]
  default = current
[pull]
  default = current
[color "diff"]
  meta = yellow bold
[rebase]
  autosquash = true
[merge]
  tool = vimdiff
[mergetool]
  path = nvim
[alias]
  b = branch
  c = commit -v
  ca = commit -v --amend
  co = checkout
  d = diff
  l = log
  r = rebase
  ri = rebase -i
  s = status
