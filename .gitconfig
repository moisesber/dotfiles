[core]
  excludesfile = /Users/yuriteixeira/.gitignore_global
  autocrlf = input
[push]
  default = current
[pull]
  default = current
[rebase]
  autosquash = true

[diff]
  tool = nvim-diff
[merge]
  tool = nvim-diff
  conflictstyle = diff3
[mergetool "nvim-diff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[color "diff"]
  meta = yellow bold

[alias]
  a = add
  aa = add .
  ap = add -p
  b = branch
  c = commit -v # with diff
  ca = commit -v --amend
  cn = commit -v -n # no hooks
  can = commit -v --amend -n
  co = checkout
  d = diff
  dc = diff --cached
  cl = checkout -- . && git reset --hard && git clean -idfx
  l = log --pretty='%C(red)%h %C(reset)%s %C(bold blue)%an, %C(green)%cr%C(yellow)%d %C(reset)' # usually my favorite format
  lo = log # default format (more info)
  p = push
  pf = push --force-with-lease # checks for same parent commit on origin before 
  r = rebase
  ri = rebase -i
  rl = reflog
  s = status
  h = log --follow -p -- # history of a file
  u = pull --rebase
  f = fetch
  fa = fetch --all
